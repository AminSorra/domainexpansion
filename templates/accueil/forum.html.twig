{% extends 'base.html.twig' %}

{% block body %}
<h1>{{ forum.title }}</h1>
<a href="{{ path('New_Forum', {'id': forum.id }) }}" class="btn btn-primary">Créer un sujet</a>

<div class="card m-3">
{% for f in forum.forums %}
    <div class="card-body">
        <h5>{{ f.title }}</h5>
        <h5>Ecrit le {{ f.createdAt | date('d/m/Y') }} à {{ f.createdAt | date('H:i') }} </h5>
    </div>
</div>
{% endfor %}
{% endblock %}


