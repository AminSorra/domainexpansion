{% extends 'base.html.twig' %}

{% block title %}Hello PageAccueilController!
{% endblock %}

{% block body %}

    <body class="gradient-custom">

	{% for categorie in categories %}
        <div class="card">
            <div class="card-header">
                <h4>{{ categorie.name }}</h4>
            </div>
            {% for souscatego in categorie.souscategories %}
                <div class="card-body border-bottom">
                    <h5 class="card-title">{{ souscatego.title  }}</h5>
                    <p class="card-text">{{ souscatego.sujet }}</p>
                    <a href="{{ path('souscategories', {'id': souscatego.id }) }}" class="btn btn-info">Ouvrir le topic</a>
                </div>
            {% endfor %}
            <div class="card-footer text-muted">
                date de publication
            </div>
        </div>
	{% endfor %}
    </body>
{% endblock %}

{% block javascripts %}{% endblock %}

{% block stylesheets %}

    <style>
        .card{
            margin-top: 5%;
            margin-left: 10%;
            margin-right: 10%;
            display: flex;
            justify-content: center;
        }
        .gradient-custom {
            /* fallback for old browsers /
            background: #2929ae;

            / Chrome 10-25, Safari 5.1-6 /
            background: -webkit-linear-gradient(to right, rgba(41, 41, 174, 0.5), rgba(90, 30, 69, 0.5));

            / W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to right, rgba(41, 41, 174, 0.5), rgba(90, 30, 69, 0.5))
        }
        .background {
            height: 300px;
            width: 100%;
            position: relative;
            z-index: 4;
        }
        nav {
            position: absolute;
            z-index: 2;
        }
        table {
            display: flex;
            justify-content: space-around;
        }
        .newMessage {
            width: 100px;
            height: 100px;
        }
    </style>
{% endblock %}